<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorXiaoMiGreen</item>
        <item name="colorPrimaryDark">@color/colorLightGrey</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarSize">50dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme_Dialog_Profile_Gender" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme_Dialog_Cancel_Btn" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">21sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
