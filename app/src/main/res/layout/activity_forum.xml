<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="sg.edu.nus.learnandroid.ForumActivity">


    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
     <TextView
         android:id="@+id/forum_title_TV"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="@string/forum_title_TV"
         android:textColor="@color/colorWhite"
         android:textSize="28sp"
         android:background="@color/cardview_dark_background"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/forum_img1_btn"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_weight="0.5"
            android:contentDescription="@string/forum_img1_btn"
            app:srcCompat="@drawable/android"/>
        <Button
            android:id="@+id/forum_fb_btn"
            android:text="@string/forum_fb_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:onClick="onClick_GoToFBPage"/>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/forum_middle_TV"
            android:text="@string/forum_middle_TV"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="18sp"/>

        <com.facebook.share.widget.LikeView
            android:text="@string/btnLike"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:textAllCaps="false"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="12dp"
            android:id="@+id/btnLike" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".9"
            android:onClick="shareLinks"
            android:layout_marginEnd="5dp"
            android:textAllCaps="false"
            android:text="@string/btnShareLinks"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"
            android:id="@+id/btnShareLinks" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="18dp">

        <TextView
            android:id="@+id/forum_bottom_TV"
            android:text="@string/forum_bottom_TV"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btnSharePhotos"
            android:text="@string/btnSharePhotos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:onClick="sharePhotos"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:background="@color/colorPrimary" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/forum_end_TV"
            android:text="@string/forum_end_TV"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btnShareVideos"
            android:text="@string/btnShareVideos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:textAllCaps="false"
            android:onClick="shareVideo"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/forum_tip_TV"
            android:text="@string/forum_tip_TV"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textSize="18sp"/>

        <ImageButton
            android:id="@+id/forum_img2_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/forum_img2_btn"
            app:srcCompat="@drawable/info"/>


    </LinearLayout>


</LinearLayout>
