<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sg.edu.nus.learnandroid.UserAccountActivity"
    tools:ignore="ContentDescription">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/userAccount_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@color/colorWhite"
        app:itemTextColor="@color/colorWhite"
        app:menu="@menu/bottom_navigation" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/userAccount_SV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/userAccount_bottom_navigation"
        android:fillViewport="true">

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/userAccount_userImage_FB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_account_black_24dp"
                app:backgroundTint="@color/colorTransparent"
                app:fabSize="normal"
                app:layout_marginTopPercent="7%" />

            <TextView
                android:id="@+id/userAccount_userName_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/userAccount_userImage_FB"
                android:layout_centerHorizontal="true"
                android:textSize="15sp"
                app:layout_marginTopPercent="1.5%" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/userAccount_RV"
                android:layout_height="match_parent"
                android:layout_below="@id/userAccount_userName_TV"
                android:layout_centerHorizontal="true"
                android:scrollbars="vertical"
                app:layout_marginTopPercent="5%"
                app:layout_widthPercent="90%" />

        </android.support.percent.PercentRelativeLayout>
    </ScrollView>
</android.support.percent.PercentRelativeLayout>
