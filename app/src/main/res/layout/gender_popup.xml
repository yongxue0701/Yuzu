<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/gender_popup_PRV"
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorWhite"
        app:layout_heightPercent="35%">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/gender_popup_SV"
            android:layout_width="match_parent"
            android:background="@drawable/text_view_with_border"
            android:fillViewport="true"
            android:scrollbars="none"
            app:layout_heightPercent="14%"
            app:layout_marginTopPercent="55%">

            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true">

                <TextView
                    android:id="@+id/gender_popup_null_TV"
                    android:layout_width="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:paddingTop="4dp"
                    android:text="@string/gender_popup_null_TV"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    app:layout_heightPercent="100%" />

                <TextView
                    android:id="@+id/gender_popup_male_TV"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/gender_popup_null_TV"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:paddingTop="4dp"
                    android:text="@string/gender_popup_male_TV"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    app:layout_heightPercent="100%" />

                <TextView
                    android:id="@+id/gender_popup_female_TV"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/gender_popup_male_TV"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:paddingTop="4dp"
                    android:text="@string/gender_popup_female_TV"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    app:layout_heightPercent="100%" />

            </android.support.percent.PercentRelativeLayout>
        </ScrollView>
    </android.support.percent.PercentRelativeLayout>

    <LinearLayout
        android:id="@+id/cancel_textview_LL"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/gender_popup_cancel_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="6dp"
            android:text="Cancel"
            android:textColor="@color/colorRed"
            android:textSize="18sp" />

    </LinearLayout>
</android.support.percent.PercentRelativeLayout>