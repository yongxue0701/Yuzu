<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sg.edu.nus.learnandroid.ForumDisplayActivity">

    <ImageView
        android:id="@+id/forum_display_img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/forum_display_img2"
        app:layout_constraintLeft_toLeftOf="@+id/forum_display_img2"
        app:srcCompat="@drawable/climb"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <ImageView
        android:id="@+id/forum_display_img2"
        android:layout_width="0dp"
        android:layout_height="87dp"
        android:layout_marginTop="189dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
