<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sg.edu.nus.learnandroid.ForumDisplayActivity">

    <ImageView
        android:id="@+id/forum_display_climb_IV"
        android:contentDescription="@string/forum_display_climb_IV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/forum_display_overlay_IV"
        app:layout_constraintLeft_toLeftOf="@+id/forum_display_overlay_IV"
        app:srcCompat="@drawable/climb"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <ImageView
        android:id="@+id/forum_display_overlay_IV"
        android:contentDescription="@string/forum_display_overlay_IV"
        android:layout_width="0dp"
        android:layout_height="87dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/overlay"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="189dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/forum_display_slogan_TV"
        android:layout_width="309dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:text="@string/forum_display_slogan_TV"
        android:textColor="@color/colorWhite"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/forum_display_overlay_IV"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/forum_display_overlay_IV"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/forum_display_web_TV"
        android:layout_width="152dp"
        android:layout_height="55dp"
        android:text="@string/forum_display_web_TV"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/forum_display_developer_TV"
        android:layout_marginStart="30dp"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/forum_display_slogan_TV"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="47dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/forum_display_news_TV"
        android:layout_width="147dp"
        android:layout_height="0dp"
        android:text="@string/forum_display_news_TV"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/forum_display_web_TV"
        android:layout_marginEnd="21dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/forum_display_web_TV"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/forum_display_developer_TV"
        android:layout_width="113dp"
        android:layout_height="22dp"
        android:text="@string/forum_display_developer_TV"
        android:textSize="18sp"
        android:textStyle="italic"
        android:textColor="@color/colorDarkGreen"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="189dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="187dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/forum_display_slogan_TV" />

    <TextView
        android:id="@+id/forum_display_androidlift_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forum_display_androidlift_TV"
        android:textSize="18sp"
        android:textStyle="italic"
        android:textColor="@color/colorDarkGreen"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/forum_display_google_TV"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/forum_display_google_TV" />

    <TextView
        android:id="@+id/forum_display_vogella_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forum_display_vogella_TV"
        android:textSize="18sp"
        android:textStyle="italic"
        android:textColor="@color/colorDarkGreen"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/forum_display_kotlin_TV"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/forum_display_kotlin_TV" />

    <TextView
        android:id="@+id/forum_display_kotlin_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forum_display_kotlin_TV"
        android:textSize="18sp"
        android:textStyle="italic"
        android:textColor="@color/colorRed"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="105dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="45dp" />

    <TextView
        android:id="@+id/forum_display_google_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forum_display_google_TV"
        android:textSize="18sp"
        android:textStyle="italic"
        android:textColor="@color/colorRed"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="3dp"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/forum_display_appnews_TV"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/forum_display_appnews_TV" />

    <TextView
        android:id="@+id/forum_display_appnews_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forum_display_appnews_TV"
        android:textSize="18sp"
        android:textStyle="italic"
        android:textColor="@color/colorRed"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/forum_display_developer_TV"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/forum_display_news_TV"
        app:layout_constraintTop_toTopOf="@+id/forum_display_developer_TV" />
</android.support.constraint.ConstraintLayout>
