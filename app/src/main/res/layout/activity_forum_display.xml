        android:textColor="@color/colorRed"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/forum_display_TV3"
        app:layout_constraintLeft_toLeftOf="@+id/forum_display_TV6"
        app:layout_constraintTop_toTopOf="@+id/forum_display_TV3"
        tools:layout_constraintBottom_creator="1"
