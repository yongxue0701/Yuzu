<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/course_map"
    tools:context="sg.edu.nus.learnandroid.CourseMapActivity">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/courseMap_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:itemBackground="@color/colorWhite"
        app:itemIconTint="@color/bottom_navigation_bar_background"
        app:itemTextColor="@color/bottom_navigation_bar_background"
        app:menu="@menu/bottom_navigation_menu_item" />

    <ImageView
        android:id="@+id/map_pin_1_IV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_map_pin_red_1"
        app:layout_marginEndPercent="36%"
        app:layout_marginTopPercent="15%" />

    <ImageView
        android:id="@+id/map_pin_2_IV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_map_pin_red_1"
        app:layout_marginStartPercent="29%"
        app:layout_marginTopPercent="29%" />

    <ImageView
        android:id="@+id/map_pin_3_IV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_map_pin_red_1"
